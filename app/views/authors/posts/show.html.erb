<div class="container">
<%= link_to 'Back', root_path, class: 'btn btn-secondary mb-3' %>
<% if @post.author_id == current_author.id %>
<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-secondary mb-3' %>
<% end %>
  <p id="notice"><%= notice %></p>
  <div class="card">
    <div class="card-body">
      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @post.description %>
      </p>

<%#       <p>
        <strong>Published:</strong>
        <%= @post.published 
      </p>

      <p>
        <strong>Published at:</strong>
        <%= @post.published_at 
      </p> %>

      <p>
        <strong>Author:</strong>
        <%= @post.author.email %>
      </p>

      <p>
        <strong>Comments:</strong>
        <%= @post.comments.count %>
      </p>
    </div>
  </div>
  <%# <div class="card">
    <div class="card-body">
      <% render @post.comments
    </div>
  </div> %>
<% @post.comments.each do |comment| %>
  <div class="card"> 
    <div class="card-body">
      <b>Name: </b><br><%= comment.name %> <br><br>
      <b>Comment: </b><br><%= comment.body %> <br>
      <br>
      <%= time_ago_in_words(comment.created_at) %>
    </div>
  </div>
      <% end %>
  <div class="card">
    <div class="card-body">
      <p> Add comment </p>
      <%= render 'comments/form'%>
    </div>
  </div>
</div>
